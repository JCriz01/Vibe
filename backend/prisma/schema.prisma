generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String 
  username String @unique
  email String @unique
  password String
  avatar String @default("")
  followers String[]
  following String[]
  big String @default("")
  posts Post[]
  replies Reply[]
}

model Post {

  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postedBy User @relation(fields: [postedById], references: [id])
  postedById String
  content String
  image String
  likes String[]
  replies Reply[]
}

model Reply {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postId String
  userId String
  content String
  userAvatar String?
  username String
  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])

}
